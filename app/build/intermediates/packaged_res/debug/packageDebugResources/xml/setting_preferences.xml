<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Tiêu đề nhóm -->
    <PreferenceCategory android:title="CÀI ĐẶT NHẮC NHỞ" />

    <Preference
        android:key="reminder_schedule"
        android:title="Lịch nhắc nhở"
        android:summary=""/>

    <Preference
        android:key="reminder_sound"
        android:title="Âm thanh nhắc nhở"
        android:summary=""/>

    <!-- Tiêu đề nhóm -->
    <PreferenceCategory android:title="CHUNG" />

    <ListPreference
        android:key="unit"
        android:title="Đơn vị"
        android:dialogTitle="Chọn đơn vị"
        android:entries="@array/unit_options"
        android:entryValues="@array/unit_values"
        android:defaultValue="ml" />

    <EditTextPreference
        android:key="water_goal"
        android:title="Mục tiêu lượng nước uống"
        android:dialogTitle="Nhập lượng nước mục tiêu"
        android:inputType="number"
        android:defaultValue="2000" />

</PreferenceScreen>
